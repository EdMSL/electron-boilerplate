{
  "description": "Electron boilerplate with React, Redix amd TypeScript.",
  "main": "./src/main/main.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./configs/webpack.config.dev.ts",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./configs/webpack.config.preload.dev.ts",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "build": "rm -rf ./release/app/dist/* && concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./configs/webpack.config.renderer.prod.ts",
    "pack": "node scripts/pack.js asar",
    "pack:test": "node scripts/pack.js",
    "release": "rm -rf ./release/app/dist/* && npm run build && npm run pack",
    "test": "jest --config=./jest.config.js"
  },
  "keywords": [
    "game",
    "manager",
    "electron"
  ],
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  },
  "author": "Eduard Trait <eduard2011rus@gmail.com> (https://github.com/EdMSL)",
  "license": "MIT",
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.10",
    "@redux-devtools/extension": "3.2.5",
    "@types/history": "^4.7.11",
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.2",
    "@types/react-dom": "18.0.11",
    "@types/react-router-dom": "5.3.3",
    "@typescript-eslint/eslint-plugin": "5.53.0",
    "@typescript-eslint/parser": "5.53.0",
    "classnames": "2.3.2",
    "concurrently": "7.6.0",
    "cross-env": "7.0.3",
    "css-loader": "6.7.3",
    "electron": "23.1.1",
    "electron-packager": "17.1.1",
    "electronmon": "2.0.2",
    "eslint": "8.34.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-import-resolver-webpack": "0.13.2",
    "eslint-plugin-import": "2.27.5",
    "html-webpack-plugin": "5.5.0",
    "jest": "29.5.0",
    "mini-css-extract-plugin": "2.7.2",
    "sass": "1.58.3",
    "sass-loader": "13.2.0",
    "sass-resources-loader": "2.2.5",
    "style-loader": "3.3.1",
    "stylelint": "15.2.0",
    "stylelint-config-standard": "30.0.1",
    "stylelint-order": "6.0.2",
    "stylelint-scss": "4.4.0",
    "svg-spritemap-webpack-plugin": "4.5.0",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "webpack-merge": "5.8.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.3",
    "connected-react-router": "^6.9.3",
    "electron-redux": "^2.0.0-alpha.8",
    "history": "^4.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.3.4",
    "redux-saga": "^1.2.2"
  }
}
